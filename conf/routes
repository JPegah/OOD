# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /Courses		    controllers.Application.Courses()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /LogIn                      controllers.Application.LogIn()
#POST    /LogIn                      controllers.Application.LogIn()
GET     /ChangePass/                 controllers.Application.ChangePass()
GET     /profile/{u_id}/Inbox                      controllers.Application.Inbox()
GET     /Course/{id}/UploadBox                  controllers.Application.Upload()
GET     /profile/Message                    controllers.Application.MessageThread()
GET     /Course/{id}/CoursePage                 controllers.Application.courseIndex(id)
GET     /Course/{id}/comment                    controllers.Application.comment()
GET     /Course/{id}/exam/{e_id}                       controllers.Application.Exams(id, e_id)
GET     /Course/{id}//addCommment                controllers.Application.newComment(id)
GET     /Course/{id}/Project/{p_id}                    controllers.Application.project(id, p_id)
GET     /Course/{id}/CourseDescription                  controllers.Application
